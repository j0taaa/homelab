# Homelab Environment Configuration
# Copy this to .env and fill in your values:
#   cp .env.example .env
#
# Naming convention: project__variable_name
# Double underscore separates project from variable

# ============================================
# SHARED
# ============================================
shared__base_domain=jaypussy.site
shared__tz=Etc/UTC

# ============================================
# INFRASTRUCTURE (infra/)
# ============================================
# Cloudflare Tunnel (required if using cloudflare profile)
infra__cf_tunnel_token=

# Traefik (optional, defaults shown)
infra__traefik_version=v2.11
infra__traefik_http_port=80
infra__traefik_dashboard_port=8080

# Portainer (optional)
infra__portainer_port=9000

# Network binding (optional)
infra__local_bind_ip=127.0.0.1
infra__docker_socket=/var/run/docker.sock

# ============================================
# DEV ENVIRONMENT (dev-env/)
# ============================================
dev_env__git_user_name=
dev_env__git_user_email=
dev_env__github_user=
dev_env__github_pat=
dev_env__anthropic_api_key=
dev_env__vercel_token=

# ============================================
# DASHBOARD (dashboard/)
# ============================================
# Generate with: htpasswd -nb <user> <password>
dashboard__basic_auth=
